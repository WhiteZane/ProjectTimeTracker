@model ProjectTimeTrackerAuth.Models.Activity

@{
    ViewData["Title"] = "Create Activity";
    ViewData["Tab"] = "Activities";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Activity</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ActivityName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ActivityName" class="form-control" />
                <span asp-validation-for="ActivityName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ActivityTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ActivityTypeID" class ="form-control" asp-items="ViewBag.ActivityTypeID">
                    <option value="">-- Select Activity Type --</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
