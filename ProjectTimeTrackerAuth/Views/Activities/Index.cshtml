@model IEnumerable<ProjectTimeTrackerAuth.Models.Activity>

@{
    ViewData["Title"] = "Activities";
    ViewData["Tab"] = "Activities";
}

<h2>Activities</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityTypes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityTypes.ActTypeDescrip)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActivityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActivityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActivityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
