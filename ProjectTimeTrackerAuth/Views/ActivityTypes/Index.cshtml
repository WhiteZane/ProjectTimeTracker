@model IEnumerable<ProjectTimeTrackerAuth.Models.ActivityType>

@{
    ViewData["Title"] = "Activity Types";
    ViewData["Tab"] = "Activity Types";
}

<h2>Activity Types</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActTypeDescrip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActTypeProd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActTypeDescrip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActTypeProd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActivityTypeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActivityTypeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActivityTypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
